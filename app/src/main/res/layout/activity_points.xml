<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purple_gradient_background"
    tools:context=".Points">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

        <ImageView
            android:id="@+id/backBtnPoints"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:onClick="onBackPressedPoints"
            android:src="@drawable/rounded_back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:text="Points Gallery"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="355dp"
        android:layout_height="263dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/gift_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

    <LinearLayout
        android:id="@+id/unlockMusicBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_button_background"
        android:clickable="true"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:onClick="unlockMusic"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Unlock New Music "
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/new_music_coin" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>